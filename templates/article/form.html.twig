{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="container">
        <h2>Article</h2>
        <div>
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.title) }}</label><br>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.author) }}</label><br>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.content }}</label><br>
                {{ form_widget(form.title) }}
            </div>
            <button type="submit">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}